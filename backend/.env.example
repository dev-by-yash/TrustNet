# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB (Configure your MongoDB connection string)
MONGODB_URI=mongodb://localhost:27017/trustnet
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trustnet

# Redis (Configure your Redis connection string)
REDIS_URL=redis://localhost:6379
# Or use Redis Cloud:
# REDIS_URL=redis://username:password@host:port

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-super-secret-encryption-key-change-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Blockchain RPC URLs (Add your RPC provider URLs)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
SUI_RPC_URL=https://fullnode.mainnet.sui.io
BASE_RPC_URL=https://mainnet.base.org

# ENS Configuration
ENS_REGISTRY=0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e
ENS_REGISTRAR_CONTROLLER=0x253553366Da8546fc250F225fe3d25d0C782303b
# Note: These are Ethereum mainnet addresses. Change for testnet.

# API Keys (Add your API keys)
ALCHEMY_API_KEY=your-alchemy-api-key
CIRCLE_API_KEY=your-circle-api-key

# Yellow Network (Add your Yellow Network configuration)
YELLOW_NETWORK_API=https://api.yellow.org
YELLOW_API_KEY=your-yellow-api-key

# Admin Wallet (Add your admin wallet private key - NEVER commit this to Git)
ADMIN_PRIVATE_KEY=your-private-key-never-commit-this

# Logging Configuration
LOG_LEVEL=debug
# Options: error, warn, info, http, debug

# Optional: Sentry for Error Tracking
# SENTRY_DSN=your-sentry-dsn

# Optional: Analytics
# ANALYTICS_KEY=your-analytics-key
